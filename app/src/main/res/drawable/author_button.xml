<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#c6ba99" />
            <gradient android:angle="180" android:startColor="#d8c89c" android:endColor="#ead18c" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#c6ba99" />
            <gradient android:angle="180" android:startColor="#f7e4b2" android:endColor="#fce4a6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#c6ba99" />
            <gradient android:angle="180" android:startColor="#f7e4b2" android:endColor="#fce4a6" />
        </shape>
    </item>
</selector>