<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#acb5c4" />
            <gradient android:angle="180" android:startColor="#eab115" android:endColor="#e5bb47" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#acb5c4" />
            <gradient android:angle="180" android:startColor="#ffc116" android:endColor="#ffcf4f" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="4dip" android:color="#d19d10" />
            <!--<solid android:color="#ffc116"/>-->
            <gradient android:angle="180" android:startColor="#ffc116" android:endColor="#ffcf4f" />
        </shape>
    </item>
</selector>